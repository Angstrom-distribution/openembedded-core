KMETA = "kernel-meta"
KCONF_BSP_AUDIT_LEVEL = "2"

SRCREV_machine_qemuarm ?= "41260ff8baf7b7ef9e9edd1148099c1b6e03bec7"
SRCREV_machine ?= "cf12f17b160deadd80de910ca4c69224e586d22f"
